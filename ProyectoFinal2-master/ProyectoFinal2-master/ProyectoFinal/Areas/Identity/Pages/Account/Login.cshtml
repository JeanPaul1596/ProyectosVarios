@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}


<br>
<div class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <div class="card shadow" style="width: auto;">

                <div class="card-body">
                    <form id="account" method="post">
                        <h1 class="text-center">@ViewData["Title"]</h1>
                        <br />
                        <h4 class="text-c">Bienvenido!</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label >Usuario</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label >Contraseña</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" style="background-color: #406882; " class="btn text-white">Log in</button>
                            <a class="btn  text-white" style="background-color: #406882; " asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrate</a>
                        </div>
                        <div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Olvide mi contraseña</a>
                            </p>

                            
                        </div>
                    </form>
                </div>
            </div>

        </section>
    </div>
