                    <!-- In order to set the email address and subject line for the contact form go to the assets/mail/contact_me.php file.-->
                    <div class="row">
                        <div class="col-lg-8 mb-4">
                            <h3>Solicite su cita</h3>
                            <a class="nav-link">@Html.ActionLink("Registrar Cita", "Registrar", "Cita", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })</a>
                        </div>
                    </div>
                </div>
            </section>
        </main>

    </div>
