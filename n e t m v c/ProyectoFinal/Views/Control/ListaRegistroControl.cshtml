@model IEnumerable<ProyectoFinal.Models.ControlModels>

@{
    ViewBag.Title = "ListaResgistroControl";

}



<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid">

                <h2>Listado de controles</h2>

                <table class="table table-striped table-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CONTROLMASCOTA)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NOMBREVETERINARIO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CITAPROXIMA)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IDCITA)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CONTROLMASCOTA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMBREVETERINARIO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CITAPROXIMA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IDCITA)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "EditarRegistroControl", new { idControl = item.IDCONTROL })
                                @Html.ActionLink("Eliminar", "EliminarRegistroControl", new { idControl = item.IDCONTROL })
                            </td>
                        </tr>
                    }
                </table>

                <div>
                    @Html.ActionLink("Volver al listado de citas", "Listado", "Cita", new { idCita = ViewBag.idCita },null)
                </div>
            </div>
        </main>
    </div>
</div>