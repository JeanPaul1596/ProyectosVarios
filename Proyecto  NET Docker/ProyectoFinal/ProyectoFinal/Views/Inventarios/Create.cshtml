@model ProyectoFinal.Models.Inventario

@{
    ViewData["Title"] = "Create";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Inventarios</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a class="nav" asp-area="" asp-controller="Home" asp-action="Index"> Inicio</a></li>
                        <li class="breadcrumb-item active">Pagina de inicio</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->

            <div>
                <div class="card card">
                    <div class="card-body">
                        <div class="row content">
                            <div class="col-6">
                                <form asp-action="Create">

                                    <div class="col-6">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Producto" class="control-label"></label>
                                            <input asp-for="Producto" class="form-control" />
                                            <span asp-validation-for="Producto" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Cantidad" class="control-label"></label>
                                            <input asp-for="Cantidad" class="form-control" />
                                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <input type="submit" value="Ingresar" class="btn btn-success m-1" />
                                            <a class="btn btn-primary m-1" asp-action="Index">Regresar</a>
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </div>
                   


                </div>



            </div>
        </div>
    </div>



</div><!-- /.container-fluid -->
 </div>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
