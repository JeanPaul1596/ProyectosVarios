@model ProyectoFinal.Models.Ventas

@{
    ViewData["Title"] = "Create";
}
<div class="content-wrapper ">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Crear venta</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a class="nav" asp-area="" asp-controller="Home" asp-action="Index"> Inicio</a></li>
                        <li class="breadcrumb-item active">Starter Page</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <form asp-action="Create">
        <div class="card card">
            <div class="card-body">
                <div class="row content">
                    <div class="col-6">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Categoria" class="control-label"></label>
                            <input asp-for="Categoria" class="form-control" />
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Producto" class="control-label"></label>
                            <input asp-for="Producto" class="form-control" />
                            <span asp-validation-for="Producto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cantidad" class="control-label"></label>
                            <input asp-for="Cantidad" class="form-control" />
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Precio" class="control-label"></label>
                            <input asp-for="Precio" class="form-control" />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Vendedor" class="control-label"></label>
                            <input asp-for="Vendedor" class="form-control" />
                            <span asp-validation-for="Vendedor" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Fecha" class="control-label"></label>
                            <input asp-for="Fecha" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>

                    </div>

                </div>
                <div class="row">
                    <div class="form-group">
                        <input type="submit" value="Ingresar" class="btn btn-success m-1" />
                       </div>

                </div>





            </div>
        </div>
    </form>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
